#include<stdio.h>
#include<math.h>
int main()
{
	int x,n;
	float y;
	printf("Enter the values of x and n \n");
	scanf("%d%d",&x,&n);
	if(n==1)
	{
		y=1+x;
		printf("The value of y is %f \n",y);
	}
	else if(n==2)
	{
		y=1+(x/n);
		printf("The value of y is %f \n",y);
	}
	else if(n==3)
	{
		y=1+pow(x,n);
		printf("The value of y is %f \n",y);
	}
	else if(n>3 || n<1)
	{
		y=1+n*x;
		printf("The value of y is %f \n",y);
	}
	return 0;
}
